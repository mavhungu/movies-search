<div class="container">
    <div class="row justify-content-center align-content-center">
        <div class="col-md-6 col-xs-12">
            <div class="card text-white bg-secondary mb-3" style="max-width: 540px;">
                {{#each name}}
                <div class="card-header">
                    <div class="row no-gutters">
                        <div class="col-md-1">
                            <svg class="bi bi-bookmark-plus" width="1em" height="1em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                <path fill-rule="evenodd" d="M4.5 2a.5.5 0 0 0-.5.5v11.066l4-2.667 4 2.667V8.5a.5.5 0 0 1 1 0v6.934l-5-3.333-5 3.333V2.5A1.5 1.5 0 0 1 4.5 1h4a.5.5 0 0 1 0 1h-4zm9-1a.5.5 0 0 1 .5.5v2a.5.5 0 0 1-.5.5h-2a.5.5 0 0 1 0-1H13V1.5a.5.5 0 0 1 .5-.5z"/>
                                <path fill-rule="evenodd" d="M13 3.5a.5.5 0 0 1 .5-.5h2a.5.5 0 0 1 0 1H14v1.5a.5.5 0 0 1-1 0v-2z"/>
                            </svg>
                        </div>
                        <div class="col-md-11">
                            <p>{{Title}} <span>{{Year}}</span></p>
                        </div>
                    </div>
                </div>
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img src="{{Poster}}" class="card-img mt-4 mb-4 ml-2" alt="...">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h5 class="card-title">{{Title}} <span class="">{{Year}}</span></h5>
                            <p class="card-text">{{Plot}}</p>
                            <p class="card-text"><small class="text-light">Last updated 3 mins ago</small></p>
                        </div>
                        {{/each}}
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
