<div class="container mt-5">
    <div class="row align-items-center justify-content-center mb-5 align-content-center">
        {{#each name}}
        <div class="col-md-10 mt-4">
            <div class="card mb-3 bg-light">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img src="{{Poster}}" class="card-img mt-4 mb-4 ml-2" alt="...">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <!--div class="form-group">
                                <h5 class="card-title font-weight-bold" id="exampleInputEmail1" aria-describedby="emailHelp">{{Title}} <span>{{Year}}</span> </h5>
                                    <span class="" id="emailHelp">{{Rated}}</span> | <span>{{Runtime}}</span>
                            </div-->
                                <dl class="row mb-0">
                                    <dt class="col-sm-2 mt-2">
                                        <img src="/icons/Bookmark-plus.svg" role="img" width="52" height="40">
                                    </dt>
                                    <dd class="col-sm-10 mt-2">
                                        <div class="form-group">
                                            <h5 class="font-weight-bold" id="exampleInputEmail1" aria-describedby="emailHelp">{{Title}} <span>{{Year}}</span> </h5>
                                            <div class="" style="font-size: 12px; line-height: 3px">
                                                <span class="text-muted" id="emailHelp">{{Rated}}</span> | <span>{{Runtime}}</span> | <span>{{Genre}}</span> | <span>{{Released}}</span>
                                            </div>
                                        </div>
                                    </dd>
                                </dl>
                            <p class="card-text">{{Plot}}</p>
                            <!--p class="card-text"><small class="text-muted">Last updated 3 mins ago</small></p-->
                            {{#each Ratings}}
                                <ul class="list-group">
                                    <li class="list-group-item d-flex justify-content-between align-items-center">
                                        {{Source}}
                                        <span class="badge badge-primary badge-pill">{{Value}}</span>
                                    </li>
                                </ul>
                            {{/each}}
                            <!--div class="mt-2">
                                <span class="text-primary"> Production </span>:
                                <span>{{Production}}</span>
                            </div>
                                <div class="">
                                    <span class="text-primary"> Director </span>:
                                    <span>{{Director}}</span>
                                </div-->
                            <dl class="row mt-3">
                                <dt class="col-sm-3 text-primary">Production</dt>
                                <dd class="col-sm-9">{{Production}}</dd>

                                    <dt class="col-sm-3 text-primary">Director</dt>
                                    <dd class="col-sm-9">{{Director}}</dd>
                            </dl>

                        </div>
                    </div>
                </div>
            </div>
        </div>
            {{/each}}
    </div>
</div>

<div class="container mt-5">
    <div class="row align-items-center mb-5">
        {{#each searched_movie}}
            {{#each Search}}
                <div class="col-md-6 my-3">
                    <div class="card border-light">
                        <div class="card-body text-center">
                            <h5 class="card-title text-center font-weight-bold"> {{Title}}</h5>
                            <a href="/users/movie/{{imdbID}}"><img src="{{Poster}}" alt="poster" /></a>
                            <p class="card-text text-center">( {{Year}} )</p>
                            <footer class="blockquote-footer">Someone famous in <cite title="Source Title">Source Title</cite></footer>
                        </div>
                    </div>
                </div>
            {{/each}}
        {{/each}}
    </div>
</div>

<div class="container mt-5">
    <div class="row mt-5 justify-content-center align-content-center align-items-center">
        {{#each searched_movie}}
            <p class="text-muted text-center">{{Error}}</p>
        {{/each}}
    </div>
</div>
