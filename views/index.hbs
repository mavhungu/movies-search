<!--h1 class="">{{!title}}</h1>
<p>Welcome to {{!title}}</p-->

<div class="container mt-5">
    <div class="row justify-content-center align-content-center mt-5">
        <div class="col-8 mb-4 mt-5" style="background: ghostwhite; border-radius: 4px">
            <form method="post" action="/users" class="p2 my-4">
                <!--input type="hidden" name="_csrf" value="{!{_csrfToken}}"-->
                <label class="sr-only" for="inlineFormInputGroup">Username</label>
                <div class="input-group mb-2">
                    <input type="text" name="search_movie" value="{{#each name}}{{Title}}{{/each}}" class="form-control" id="search_movie" placeholder="Search" required >
                    <div class="input-group-append">
                        <button type="submit" class="btn btn-primary my-2 my-sm-0">Search</button>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>
    <div class="container">
        <div class="row align-items-center mb-5">
            {{#each name}}
                {{#each Search}}
                    <div class="col-md-6 mt-3">
                        <div class="card border-light bg-light">
                            <div class="card-body text-center">
                                <h5 class="card-title text-center"><span class="text-capitalize font-weight-bold"> {{Title}}</span> <span class="text-muted" style="font-size: small">( {{Year}} )</span></h5>
                                <a href="/movie/{{imdbID}}"><img src="{{Poster}}" alt="poster" /></a>
                                <p class="card-text text-center"></p>
                                <span class="text-center" style="line-height: 1px">
                                    <a href="/users/movie/{{imdbID}}" type="button" class="btn btn-info">
                                        <svg class="bi bi-eye text-light" width="2em" height="2em" viewBox="0 0 16 16" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
                                            <path fill-rule="evenodd" d="M16 8s-3-5.5-8-5.5S0 8 0 8s3 5.5 8 5.5S16 8 16 8zM1.173 8a13.134 13.134 0 0 0 1.66 2.043C4.12 11.332 5.88 12.5 8 12.5c2.12 0 3.879-1.168 5.168-2.457A13.134 13.134 0 0 0 14.828 8a13.133 13.133 0 0 0-1.66-2.043C11.879 4.668 10.119 3.5 8 3.5c-2.12 0-3.879 1.168-5.168 2.457A13.133 13.133 0 0 0 1.172 8z"/>
                                            <path fill-rule="evenodd" d="M8 5.5a2.5 2.5 0 1 0 0 5 2.5 2.5 0 0 0 0-5zM4.5 8a3.5 3.5 0 1 1 7 0 3.5 3.5 0 0 1-7 0z"/>
                                        </svg>
                                        View</a>
                                </span>
                            </div>
                        </div>
                    </div>
                {{/each}}
            {{/each}}
        </div>
    </div>




